# Delay Module control
#
# Macros:
#  SYS = System name
#  EVR = EVR devObj name
#  SLOT = Delay module can be fitted in slot 0 or slot 1. 
#  Enabled = Enable or disable the module. When disabled outputs are pulled to logic low.
#  Delay0 = The delay (in ns) of the first output
#  Delay1 = The delay (in ns) of the second output

record(bo, "$(SYS)-$(EVR):UnivDlyModule$(SLOT)-Ena-SP") {
  field( DESC, "Enable")
  field( DTYP, "Obj Prop bool")
  field( OUT , "@OBJ=$(EVR):UnivDlyModule$(SLOT), PROP=Enable")
  field( PINI, "YES")
  field( ZNAM, "Disabled")
  field( ONAM, "Enabled")
  field( VAL , "$(Enabled=1)") # Default to enabled
  field( FLNK, "$(SYS)-$(EVR):UnivDlyModule$(SLOT)-Ena-RB")
  info(autosaveFields_pass0, "VAL")
}

record(bi, "$(SYS)-$(EVR):UnivDlyModule$(SLOT)-Ena-RB") {
  field( DESC, "Is module enabled")
  field( DTYP, "Obj Prop bool")
  field( INP , "@OBJ=$(EVR):UnivDlyModule$(SLOT), PROP=Enable")
  field( ZNAM, "Disabled")
  field( ONAM, "Enabled")
}

record(ao, "$(SYS)-$(EVR):UnivDlyModule$(SLOT)-Delay0-SP") {
  field( DESC, "First delay output")
  field( DTYP, "Obj Prop double")
  field( OUT , "@OBJ=$(EVR):UnivDlyModule$(SLOT), PROP=Delay0")
  field( EGU , "ns")
  field( PINI, "YES")
  field( VAL , "$(Delay0=2.200)")
  field( HOPR, "12.430")
  field( LOPR, "2.200")
  field( PREC, 2)
  field( FLNK, "$(SYS)-$(EVR):UnivDlyModule$(SLOT)-Delay0-RB")
  info( autosaveFields_pass0, "VAL")
}

record(ai, "$(SYS)-$(EVR):UnivDlyModule$(SLOT)-Delay0-RB") {
  field( DESC, "First delay readback")
  field( DTYP, "Obj Prop double")
  field( INP , "@OBJ=$(EVR):UnivDlyModule$(SLOT), PROP=Delay0")
  field( HIHI, "12.431")
  field( LOLO, "2.199")
  field( PREC, 2)
  field( EGU,  "ns")
}

