record(bo, "$(P):$(N):Polarity") {
        field( DTYP, "EVG Mxc")
        field( DESC, "EVG Mux Output Polarity")
        field( OUT , "#C$(cardNum) S$(mxcNum) @")
        field( PINI, "YES")
        field( VAL, "0")
        field( UDF, "0")
        field( ZNAM, "Orginal")
        field( ONAM, "Inverted")
        info(autosaveFields_pass0, "VAL")
}

record(bi, "$(P):$(N):Status") {
        field( DTYP, "EVG Mxc")
        field( DESC, "EVG Mux Output Status")
        field( INP , "#C$(cardNum) S$(mxcNum) @")
        field( ZNAM, "0")
        field( ONAM, "1")
}

record(ao, "$(P):$(N):Freq") {
        field( DTYP, "EVG Mxc")
        field( DESC, "EVG Mux Frequency")
        field( OUT, "#C$(cardNum) S$(mxcNum) @")
        field( PINI, "YES")
        field( VAL, "1")
        field( UDF, "0")
        field( EGU, "Hz")
        field( HOPR, "62500000")
        field( LOPR, "0.029")
        field( DRVH, "62500000")
        field( DRVL, "0.029")
        field( PREC, "3")
        field( FLNK, "$(P):$(N):Freq:RB")
        info(autosaveFields_pass0, "VAL")
}

