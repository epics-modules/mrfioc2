record(mbbo, "$(P)Enable-Sel") {
  field(DESC, "EVG Master Enable")
  field(DTYP, "Obj Prop uint16")
  field(OUT , "@OBJ=$(OBJ), PROP=Enable")
  field(ZRST, "Disabled")
  field(ONST, "Enabled")
  field(TWST, "Ena Master")
  field(ZRVL, "0")
  field(ONVL, "1")
  field(TWVL, "2")
