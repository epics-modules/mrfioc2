## 	Event Clock Source 	##
record(bo, "EVG$(cardNum):Enable") {
	field( DTYP, "EVG")
  	field( DESC, "EVG Master Enable")
  	field( OUT , "#C$(cardNum) S @")
	field( UDF, "0")
	field( PINI, "YES")
	field( VAL, "1")
  	field( ZNAM, "Enable")
  	field( ONAM, "Disable")
}

record(ao, "EVG$(cardNum):ClkSpeed") {
	field( DTYP, "EVG Clk")
	field( DESC, "EVG Clk Speed")
	field( OUT, "#C$(cardNum) S @")
	field( PINI, "YES")
	field( VAL, "124.907")
	field( UDF, "0")
	field( EGU, "MHz")
	field( HOPR, "125")
	field( LOPR, "50")
	field( DRVH, "125")
	field( DRVL, "50")
	field( PREC, "3")
}

record(longout, "EVG$(cardNum):ClkSrc") {
	field( DTYP, "EVG Clk")
	field( DESC, "EVG Clk Source Output")
	field( OUT, "#C$(cardNum) S @")
	field( PINI, "YES")
	field( VAL , "0")
	field( UDF, "0")
}

record(bo, "EVG$(cardNum):SoftEvtEna") {
	field( DTYP, "EVG Soft Evt")
  	field( DESC, "EVG Software Event Enable")
  	field( OUT , "#C$(cardNum) S @")
	field( UDF, "0")
  	field( ZNAM, "Enable")
  	field( ONAM, "Disable")
}


record(longout, "EVG$(cardNum):SoftEvtCode") {
	field( DTYP, "EVG Soft Evt")
	field( DESC, "EVG Software Event Code")
	field( OUT, "#C$(cardNum) S @")
	field( PINI, "YES")
	field( VAL , "0x7")
	field( UDF, "0")
}