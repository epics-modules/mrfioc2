# average number of events taken from the FIFO during each loop
record(calc, "$(P)FIFOCap-I") {
  field(DESC, "FIFO capacity utilization")
  field(INPA, "$(P)Rate$(s=:)FIFOEvt-I")
  field(INPB, "$(P)Rate$(s=:)FIFOLoop-I")
  field(INPC, "5.11")
  field(CALC, "A/B/C")
  field(EGU , "%")
  field(HIHI, "98")
  field(HIGH, "80")
  field(LOW , "-1")
  field(HHSV, "MAJOR")
  field(HSV , "MINOR")
  field(LSV , "INVALID")
