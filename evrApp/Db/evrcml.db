# Extra controls for CML/GTX outputs
#
# Macros:
#  ON = output record name prefix
#  P  = base record name prefix
#  OBJ = devObj name

record(bo, "$(ON)Ena-Sel") {
  field(DTYP, "Obj Prop bool")
  field(OUT, "@OBJ=$(OBJ), PROP=Enable")
  field(PINI, "YES")
  field(UDF, "0")
  field(VAL, "0")
  field(ZNAM, "Disabled")
  field(ONAM, "Enabled")
  info(autosaveFields_pass0, "VAL")
}

