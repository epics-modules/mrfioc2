  field(DTYP, "Obj Prop bool")
  field(OUT, "@OBJ=$(OBJ), PROP=Power")
  field(PINI, "YES")
  field(UDF, "0")
  field(VAL, "0")
  field(ZNAM, "Off")
  field(ONAM, "On")
  info(autosaveFields_pass0, "VAL")
}

