
record(bo, "$(P)$(I)level") {
  field( DTYP, "EVR Input")
  field( DESC, "Input $(IDX)")
  field( OUT , "@C=$(C), I=$(IDX), P=Active Level")
  field( PINI, "YES")
  field( VAL , "1")
  field( ZNAM, "Active Low")
  field( ONAM, "Active High")
  info(autosaveFields_pass0, "VAL")
}

