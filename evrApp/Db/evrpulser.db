# Pulser sub-unit records for an EVR

record(bo, "$(P)$(N)enable") {
  field(DTYP, "EVR Pulser")
  field(OUT , "@C=$(C), I=$(PID), P=Enable")
  field(PINI, "YES")
  field(VAL , "1")
  field(MASK, "1")
  field(ZNAM, "Disabled")
  field(ONAM, "Enabled")
  info(autosaveFields_pass0, "VAL")
}

record(bo, "$(P)$(N)polarity") {
  field(DTYP, "EVR Pulser")
  field(OUT , "@C=$(C), I=$(PID), P=Polarity")
  field(PINI, "YES")
  field(VAL , "0")
  field(MASK, "1")
  field(ZNAM, "Active High")
  field(ONAM, "Active Low")
  info(autosaveFields_pass0, "VAL")
}

record(ao, "$(P)$(N)delay") {
  field(DTYP, "EVR Pulser")
  field(OUT , "@C=$(C), I=$(PID), P=Delay")
  field(PINI, "YES")
  field(DESC, "Pulse Generator $(PID)")
  field(VAL , 0)
  field(EGU , "us")
  field(LINR, "LINEAR")
  field(ESLO, "1e6")
  field(PREC, "3")
  field(FLNK, "$(P)$(N)delay:raw")
  info(autosaveFields_pass0, "VAL EGU ESLO PREC HOPR LOPR DRVL DRVH")
}

record(longin, "$(P)$(N)delay:raw") {
  field(DTYP, "EVR Pulser")
  field(INP , "@C=$(C), I=$(PID), P=Delay")
  field(EGU , "cnts")
  field(HOPR, "$(DMAX=0xffff)")
  field(LOPR, "0")
  field(HIGH, "$(DMAX=0xffff)")
  field( HSV, "MAJOR")
}

record(ao, "$(P)$(N)width") {
  field(DTYP, "EVR Pulser")
  field(OUT , "@C=$(C), I=$(PID), P=Width")
  field(PINI, "YES")
  field(DESC, "Pulser pulse width")
  field(VAL , 0)
  field(EGU , "us")
  field(LINR, "LINEAR")
  field(ESLO, "1e6")
  field(PREC, "3")
  field(FLNK, "$(P)$(N)width:raw")
  info(autosaveFields_pass0, "VAL EGU ESLO PREC HOPR LOPR DRVL DRVH")
}

record(longin, "$(P)$(N)width:raw") {
  field(DTYP, "EVR Pulser")
  field(INP , "@C=$(C), I=$(PID), P=Width")
  field(PINI, "YES")
  field(HOPR, "$(WMAX=0xffff)")
  field(LOPR, "0")
  field(HIGH, "$(WMAX=0xffff)")
  field( HSV, "MAJOR")
}

record(longout, "$(P)$(N)prescaler:set") {
  field(DTYP, "EVR Pulser")
  field(OUT , "@C=$(C), I=$(PID), P=Prescaler")
  field(DESC, "Pulser prescaler")
  field(PINI, "YES")
  field(HOPR, "$(PMAX)")
  field(LOPR, "1")
  field(DRVH, "$(PMAX)")
  field(DRVL, "1")
  field(VAL , "1")
  field(FLNK, "$(P)$(N)prescaler")
  field(DISP, "$(NOPS=0)")
  field(DISA, "$(NOPS=0)")
  info(autosaveFields_pass0, "VAL")
}

record(longin, "$(P)$(N)prescaler") {
  field(DTYP, "EVR Pulser")
  field(INP , "@C=$(C), I=$(PID), P=Prescaler")
  field(HOPR, "$(PMAX=0xffff)")
  field(LOPR, "1")
  field(HIGH, "$(PMAX=0xffff)")
  field( HSV, "MAJOR")
  field(FLNK, "$(P)$(N)res")
}

record(calc, "$(P)$(N)res") {
  field(DESC, "Resolution")
  field(INPA, "$(P)$(N)prescaler MS")
  field(INPB, "$(P)clock:period CP")
  field(CALC, "1e9*(A?A:1)*B")
  field(EGU, "ns")
  field(FLNK, "$(P)$(N)res:fo")
}

record(fanout, "$(P)$(N)res:fo") {
  field(DESC, "Clock change resync")
  field(LNK1, "$(P)$(N)delay")
  field(LNK2, "$(P)$(N)width")
}
