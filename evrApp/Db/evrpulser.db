record(mbbiDirect, "$(PN)PSTrig-RB")
{
  field(DTYP, "Obj Prop uint32")
  field(INP , "@OBJ=$(OBJ), PROP=PSTrig")
  field(PINI, "YES")
  field(NOBT, "8")
  info(autosaveFields_pass0, "RVAL")
}

