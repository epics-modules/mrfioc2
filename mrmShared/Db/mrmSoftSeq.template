#
#Process Load-Cmd record if the sequence  was perviously in LOADED state
#

record(calcout, "$(P)Load-Calc_") {
    field(ASG, "private")
    field( CALC, "A")
    field( INPA, "$(P)Load-RB NPP NMS")
    field( OOPT, "When Non-zero")
    field( OUT,  "$(P)Load-Cmd PP")
}

